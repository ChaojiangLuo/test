{
  "name": "Hello World!",
  "description": "My first Chrome platform app.",
  "version": "1",
  "app": {
    "launch": {
      "local_path": "helloworld.html",
      "container": "shell",
      "width": 300,
      "height": 300
    }
  },
  "platform_app": true,
  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  "permissions": [
    "experimental",
    "socket"
  ],
  "intents": {
    "http://webintents.org/view": {
      "type": ["text/plain"],
      "path": "services/view",
      "title": "HelloWorld Text Editor",
      "disposition": "inline"
    }
  }
}
